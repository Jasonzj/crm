{
  "name": "crm",
  "version": "1.1.1",
  "description": "Customer Relationship Management",
  "repository": {
    "type": "git",
    "url": "git:https://github.com/Jasonzj/crm.git"
  },
  "scripts": {
    "dev": "NODE_ENV=dev node server.js",
    "build": "rm -rf ./build && NODE_ENV=production webpack --config webpack.prod.js --colors",
    "test": "jest",
    "cov": "jest --coverage"
  },
  "author": "Jason",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^7.2.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-import": "^1.6.2",
    "babel-plugin-transform-decorators": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "bundle-loader": "^0.5.5",
    "classnames": "^2.2.5",
    "css-loader": "^0.28.7",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.12.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "http-proxy-middleware": "^0.17.4",
    "inline-manifest-webpack-plugin": "^3.0.1",
    "jest": "^21.2.1",
    "node-sass": "^4.7.2",
    "open-browser-webpack-plugin": "0.0.5",
    "postcss-loader": "^2.0.9",
    "prop-types": "^15.6.0",
    "react-hot-loader": "^3.1.3",
    "react-test-renderer": "^16.2.0",
    "redux-logger": "^3.0.6",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-dev-server": "^2.9.7",
    "webpack-jarvis": "^0.1.1",
    "webpack-monitor": "^1.0.14"
  },
  "dependencies": {
    "antd": "^2.13.10",
    "axios": "^0.17.1",
    "babel-runtime": "^6.26.0",
    "nprogress": "^0.2.0",
    "react": "^16.2.0",
    "react-countup": "^3.0.2",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "recharts": "^1.0.0-beta.6",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/test/shim.js",
      "<rootDir>/test/setup.js"
    ],
    "moduleFileExtensions": [
      "",
      "js",
      "jsx",
      "scss"
    ],
    "modulePaths": [
      "src"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.js",
      ".*\\.(css|less|scss)$": "<rootDir>/test/__mocks__/styleMock.js",
      ".style": "<rootDir>/test/__mocks__/styleMock.js",
      "^components(.*)$": "<rootDir>/src/components$1"
    }
  }
}
